{
    "version": 2,
    "buildCommand": "npm run build",
    "installCommand": "npm ci --include=dev",
    "outputDirectory": "dist/public",

    "builds": [
      {
        "src": "server/index.ts",
        "use": "@vercel/node"
      },
      {
        "src": "server/vite.ts",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "server/index.ts"
      },
      {
        "src": "/(.*)",
        "dest": "dist/public/index.html"
      }
    ]
  }